                                            <TextBlock 
                                                Margin="0, 0, 0, 0"
                                                Grid.Column="2"
                                                HorizontalAlignment="Left"
                                                Text="{Binding Expenses_Money}"
                                                Style="{StaticResource RegularText}"/>
                                        </Grid>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>

                        </Grid>

