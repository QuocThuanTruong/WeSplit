<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local_converter="clr-namespace:WeSplit.Converter"
                    xmlns:local="clr-namespace:WeSplit.Themes">

    <!-- Absolute path converter -->
    <local_converter:AbsolutePathConverter x:Key="PathConverter"/>

    <!-- Define Color -->
    <SolidColorBrush x:Key="MyDarkGreen" Color="#002a1b"/>
    <SolidColorBrush x:Key="MyNeueGreen" Color="#157d74"/>
    <SolidColorBrush x:Key="MyLightGreen" Color="#1aaf75"/>
    <SolidColorBrush x:Key="MyLightGreenOpacity" Color="#409ff4d0"/>
    <SolidColorBrush x:Key="MyLightGreen2" Color="#9ff4d0"/>
    <SolidColorBrush x:Key="MyOrange" Color="#e65925"/>
    <SolidColorBrush x:Key="MyLightOrange" Color="#ffa129"/>
    <SolidColorBrush x:Key="MyBlack" Color="#303030"/>
    <SolidColorBrush x:Key="MyRed" Color="#d92027"/>
    <SolidColorBrush x:Key="LightRedHover" Color="#ff6666"/>
    
    <SolidColorBrush x:Key="MyLightGray" Color="#efefef"/>
    <SolidColorBrush x:Key="MyLightGray2" Color="#e6e6e6"/>
    <SolidColorBrush x:Key="MyLightGray3" Color="#d6d6d6"/>
    <SolidColorBrush x:Key="MyLightGray4" Color="#808080"/>
    <SolidColorBrush x:Key="MyLightGray5" Color="#666666"/>

    <SolidColorBrush x:Key="RippleGreen" Color="#61e2ae"/>
    <SolidColorBrush x:Key="MyLIghtGreenOpacity" Color="#75caeadb"/>
    <Color x:Key="ShadowOrange">#ffd400</Color>

    <LinearGradientBrush x:Key="MyOrangeGradient">
        <GradientStop Color="#e65925" Offset="0"/>
        <GradientStop Color="#ffa129" Offset="1.0"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="MyOrangeGradientScale">
        <GradientStop Color="#e65925" Offset="-0.5"/>
        <GradientStop Color="#ffa129" Offset="1.5"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="MyGreenGradient">
        <GradientStop Color="#157d74" Offset="0"/>
        <GradientStop Color="#1aaf75" Offset="1.0"/>
    </LinearGradientBrush>

    <Color x:Key="StartGradientColor">#157d74</Color>
    <Color x:Key="EndGradientColor">#1aaf75</Color>


    <!-- Text appearance -->
    <Style TargetType="TextBlock"
               x:Key="LargeHeaderText">
        <Setter Property="FontSize" Value="33"/>
        <Setter Property="FontFamily" Value="{DynamicResource Bebas}"/>
        <Setter Property="TextWrapping" Value="Wrap"/>
        <Setter Property="TextAlignment" Value="Left"/>
        <Setter Property="Foreground" Value="{DynamicResource MyDarkGreen}"/>
    </Style>

    <Style TargetType="TextBlock"
               x:Key="MediumHeaderText">
        <Setter Property="FontSize" Value="28"/>
        <Setter Property="FontFamily" Value="{DynamicResource Bebas}"/>
        <Setter Property="TextWrapping" Value="Wrap"/>
        <Setter Property="TextAlignment" Value="Left"/>
        <Setter Property="Foreground" Value="{DynamicResource MyDarkGreen}"/>
    </Style>

    <Style TargetType="TextBlock"
               x:Key="RegularHeaderText">
        <Setter Property="FontSize" Value="21"/>
        <Setter Property="FontFamily" Value="{DynamicResource Bebas}"/>
        <Setter Property="TextWrapping" Value="Wrap"/>
        <Setter Property="TextAlignment" Value="Left"/>
        <Setter Property="Foreground" Value="{DynamicResource MyDarkGreen}"/>
    </Style>

    <Style TargetType="TextBlock"
                   x:Key="RegularText">
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontFamily" Value="{DynamicResource GilroyRegular}"/>
        <Setter Property="TextWrapping" Value="Wrap"/>
        <Setter Property="TextAlignment" Value="Justify"/>
        <Setter Property="Foreground" Value="{DynamicResource MyBlack}"/>
    </Style>


    <Style TargetType="TextBlock"
                   x:Key="SemiBoldRegularText">
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontFamily" Value="{DynamicResource GilroySemiBold}"/>
        <Setter Property="TextWrapping" Value="Wrap"/>
        <Setter Property="TextAlignment" Value="Justify"/>
        <Setter Property="Foreground" Value="{DynamicResource MyDarkGreen}"/>
    </Style>

    <Style TargetType="TextBlock"
                   x:Key="SemiBoldMediumText">
        <Setter Property="FontSize" Value="18"/>
        <Setter Property="FontFamily" Value="{DynamicResource GilroySemiBold}"/>
        <Setter Property="TextWrapping" Value="Wrap"/>
        <Setter Property="TextAlignment" Value="Justify"/>
        <Setter Property="Foreground" Value="{DynamicResource MyBlack}"/>
    </Style>

    <Style TargetType="TextBlock"
                   x:Key="BoldMediumText">
        <Setter Property="FontSize" Value="20"/>
        <Setter Property="FontFamily" Value="{DynamicResource GilroyBold}"/>
        <Setter Property="TextWrapping" Value="Wrap"/>
        <Setter Property="TextAlignment" Value="Justify"/>
        <Setter Property="Foreground" Value="{DynamicResource MyNeueGreen}"/>
    </Style>

    <Style TargetType="TextBlock"
                   x:Key="ButtonMediumText">
        <Setter Property="FontSize" Value="17"/>
        <Setter Property="FontFamily" Value="{DynamicResource GilroyMedium}"/>
        <Setter Property="TextWrapping" Value="Wrap"/>
        <Setter Property="TextAlignment" Value="Justify"/>
        <Setter Property="Foreground" Value="White"/>
    </Style>

    <Style TargetType="TextBlock"
                   x:Key="SmallText">
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="FontFamily" Value="{DynamicResource GilroyRegular}"/>
        <Setter Property="TextWrapping" Value="Wrap"/>
        <Setter Property="TextAlignment" Value="Justify"/>
        <Setter Property="Foreground" Value="{DynamicResource MyBlack}"/>
    </Style>
    
    

    <Style TargetType="TextBlock"
                   x:Key="DrawerMediumText">
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="FontFamily" Value="{DynamicResource GilroyMedium}"/>
        <Setter Property="TextWrapping" Value="Wrap"/>
        <Setter Property="TextAlignment" Value="Left"/>
        <Setter Property="Foreground" Value="{DynamicResource MyDarkGreen}"/>
    </Style>

    <Style TargetType="TextBlock"
                   x:Key="MediumText">
        <Setter Property="FontSize" Value="13.5"/>
        <Setter Property="FontFamily" Value="{DynamicResource GilroyRegular}"/>
        <Setter Property="TextWrapping" Value="Wrap"/>
        <Setter Property="TextAlignment" Value="Justify"/>
        <Setter Property="Foreground" Value="{DynamicResource MyDarkGreen}"/>
    </Style>

</ResourceDictionary>